@model List<NLPExamGenerator.WebApp.Models.ExamViewModel>
@{
    ViewData["Title"] = "Mis Exámenes";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-clipboard-list text-primary"></i> Mis Exámenes</h2>
                <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary">
                    <i class="fas fa-plus"></i> Generar Nuevo Examen
                </a>
            </div>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (Model.Count == 0)
            {
                <div class="text-center py-5">
                    <i class="fas fa-clipboard-list fa-5x text-white mb-3"></i>
                    <h4 class="text-white">No tienes exámenes generados</h4>
                    <p class="text-white">¡Comienza generando tu primer examen desde un PDF!</p>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg">
                        <i class="fas fa-upload"></i> Subir PDF y Generar Examen
                    </a>
                </div>
            }
            else
            {
                <div class="row">
                    @foreach (var exam in Model)
                    {
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100 shadow-sm" style="background:rgba(255,255,255,.035);border:1px solid rgba(255,255,255,.08);border-radius:12px;padding:16px;margin:12px 0">
                                <div class="card-header bg-primary text-white">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-file-alt"></i> @exam.Title
                                    </h5>
                                </div>
                                <div class="card-body text-white">
                                    @if (!string.IsNullOrEmpty(exam.Description))
                                    {
                                        <p class="card-text text-white">@exam.Description</p>
                                    }
                                    
                                    @if (!string.IsNullOrEmpty(exam.SourceSummary))
                                    {
                                        <p class="card-text">
                                            <small class="text-white">
                                                <strong>Resumen:</strong> @exam.SourceSummary.Substring(0, Math.Min(100, exam.SourceSummary.Length))@(exam.SourceSummary.Length > 100 ? "..." : "")
                                            </small>
                                        </p>
                                    }
                                    
                                    <div class="row text-center">
                                        <div class="col-6">
                                            <span class="badge bg-info text-dark">
                                                <i class="fas fa-question-circle"></i> @exam.QuestionCount preguntas
                                            </span>
                                        </div>
                                        <div class="col-6">
                                            <span class="badge bg-secondary">
                                                <i class="fas fa-calendar"></i> @exam.CreatedAt.ToString("dd/MM/yyyy")
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer bg-transparent">
                                    <div class="d-flex justify-content-between">
                                        <a href="@Url.Action("Details", "MyExams", new { id = exam.Id })" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i> Ver Examen
                                        </a>
                                        <button class="btn btn-sm btn-outline-danger" onclick="deleteExam(@exam.Id)">
                                            <i class="fas fa-trash"></i> Eliminar
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="text-center mt-4">
                    <p class="text-white">
                        <i class="fas fa-info-circle"></i> 
                        Tienes @Model.Count exámen@(Model.Count == 1 ? "" : "es") generado@(Model.Count == 1 ? "" : "s")
                    </p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Modal de confirmación para eliminar -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header text-black">
                <h5 class="modal-title">Confirmar eliminación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-black">
                ¿Estás seguro de que quieres eliminar este examen? Esta acción no se puede deshacer.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-danger" id="confirmDelete">Eliminar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let examToDelete = 0;

        function deleteExam(examId) {
            examToDelete = examId;
            const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }

        document.getElementById('confirmDelete').addEventListener('click', function() {
            if (examToDelete > 0) {
                fetch(`/MyExams/Delete/${examToDelete}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert(data.mensaje || 'Error al eliminar el examen');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error al eliminar el examen');
                });
                
                bootstrap.Modal.getInstance(document.getElementById('deleteModal')).hide();
            }
        });
    </script>
}